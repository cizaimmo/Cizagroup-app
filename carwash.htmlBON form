<script>
let lang="fr";

function calc(){
  const v=+vehicle.value;
  const s=+service.value;
  const l=+location.value;
  const total=v+s+l;
  document.getElementById("total").innerText=
    total.toLocaleString()+" BIF";
}
calc();

function toggleLang(){
  lang = lang==="fr"?"en":"fr";
  document.querySelector(".lang").innerText=lang.toUpperCase();

  if(lang==="en"){
    title.innerText="Book a car wash";
    lVehicle.innerText="Vehicle type";
    lService.innerText="Service type";
    lLocation.innerText="Location";
    lDate.innerText="Date";
    lTime.innerText="Time";
    totalLabel.innerText="Total:";
    confirm.innerText="Confirm booking";
    payTitle.innerText="Accepted payments";
  }else{
    title.innerText="R√©server un lavage";
    lVehicle.innerText="Type de v√©hicule";
    lService.innerText="Type de service";
    lLocation.innerText="Lieu";
    lDate.innerText="Date";
    lTime.innerText="Heure";
    totalLabel.innerText="Total :";
    confirm.innerText="Confirmer la r√©servation";
    payTitle.innerText="Paiement accept√©";
  }
}
