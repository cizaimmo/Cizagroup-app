        display:block;
        width:90%;
        margin:25px auto;
        padding:18px;
        font-size:20px;
        border-radius:15px;
        border:none;
        background:var(--gold);
        color:#06142E;
        font-weight:bold;
        text-align:center;
        cursor:pointer;
        text-decoration:none;
    }

    /* SERVICES */
    .section-title{
        font-size:26px;
        font-weight:700;
        margin:25px 15px 10px;
        color:var(--gold);
    }

    .services-grid{
        display:grid;
        grid-template-columns:1fr 1fr;
        gap:17px;
        padding:15px;
        padding-bottom:50px;
    }

    .service-card{
