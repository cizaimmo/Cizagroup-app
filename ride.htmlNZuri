    font-size:14px;
    color:#ddd;
    margin-top:25px;
    opacity:.8;
}
footer a{
    color:#F2B840;
    text-decoration:none;
}

/* ANIMATION */
@keyframes fadeUp{
    from{ opacity:0; transform:translateY(25px); }
    to{ opacity:1; transform:translateY(0); }
}

