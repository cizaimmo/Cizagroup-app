<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title>CIZA GROUP — Tableau de bord</title>
<link rel="icon" href="logotransparent.png">

<style>
    body{
        margin:0;
        background:#06142E;
        color:white;
        font-family:Arial, sans-serif;
    }

    header{
        background:#06142E;
        padding:18px;
        text-align:center;
        border-bottom:2px solid #F2B840;
        position:sticky;
        top:0;
    }

    header img{
        height:45px;
        display:block;
        margin:auto;
    }

    .logout{
        position:absolute;
        right:15px;
        top:18px;
        background:#F2B840;
        border:none;
        padding:8px 14px;
        border-radius:8px;
        font-weight:bold;
        cursor:pointer;
        color:#06142E;
    }

    h2{
        text-align:center;
        margin-top:20px;
        color:#F2B840;
    }

    .menu{
        padding:20px;
        display:grid;
        grid-template-columns:repeat(auto-fit,minmax(150px,1fr));
        gap:18px;
    }

    .card{
        background:#0B1C34;
        padding:24px;
        border-radius:14px;
        border:1px solid #12335C;
        text-align:center;
        cursor:pointer;
        transition:.3s;
    }
    .card:hover{
        transform:translateY(-5px);
        border-color:#F2B840;
    }
    .card h3{
        color:#F2B840;
        margin-bottom:8px;
    }
    .card p{
        opacity:.7;
        font-size:14px;
        line-height:1.4;
    }
</style>
</head>

<body>

<header>
    <button class="logout" onclick="logoutUser()">Déconnexion</button>
    <img src="logotransparent.png" alt="CIZA GROUP">
</header>

<h2>Bienvenue dans CIZA GROUP App</h2>

<div class="menu">
    <div class="card" onclick="go('services/carwash.html')">
        <h3>CizaCarWash+</h3>
        <p>Lavage premium & abonnements</p>
    </div>

    <div class="card" onclick="go('services/delivery.html')">
        <h3>CizaDelivery</h3>
        <p>Livraison express & courses</p>
    </div>

    <div class="card" onclick="go('services/assist.html')">
        <h3>CizaAssist</h3>
        <p>Assistance administrative</p>
    </div>

    <div class="card" onclick="go('services/market.html')">
        <h3>CizaMarket</h3>
        <p>Achats Burundi & Canada</p>
    </div>

    <div class="card" onclick="go('services/jobs.html')">
        <h3>CizaJobs</h3>
        <p>Emploi & Recrutement</p>
    </div>

    <div class="card" onclick="go('services/cizaride.html')">
        <h3>CizaRide+</h3>
        <p>Transport privé & taxi premium</p>
    </div>
</div>

<script type="module">
    import { initializeApp } 
        from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
    import { 
        getAuth,
        signOut,
        onAuthStateChanged
    } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";

    const firebaseConfig = {
        apiKey: "AIzaSyBAiJHbBvRO6cDFpm6C-5mQk6SiTtzcI8o",
        authDomain: "cizagroup-app.firebaseapp.com",
        projectId: "cizagroup-app",
        storageBucket: "cizagroup-app.firebasestorage.app",
        messagingSenderId: "930936264084",
        appId: "1:930936264084:web:5395360e54bf17bf492b81"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    /* REDIRECTION SI NON CONNECTÉ */
    onAuthStateChanged(auth, (user)=>{
        if(!user){
            window.location.href = "auth/login.html";
        }
    });

    /* Déconnexion */
    window.logoutUser = function(){
        signOut(auth).then(()=>{
            window.location.href = "auth/login.html";
        });
    };

    /* Navigation */
    window.go = function(path){
        window.location.href = path;
    };
</script>

</body>
</html>
