<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title>CizaRide+ — Choix du Service</title>
<link rel="icon" href="logotransparent.png">

<style>
body{
    margin:0;
    background:#06142E;
    color:white;
    font-family:Arial, sans-serif;
}

/* SPLASH */
#splash{
    position:fixed;
    top:0; left:0;
    width:100%; height:100%;
    background:#06142E;
    display:flex;
    justify-content:center;
    align-items:center;
    flex-direction:column;
    z-index:9999;
    animation:fadeOut 1.6s ease 2.6s forwards;
}

#splash img{
    width:150px;
    opacity:0;
    filter:drop-shadow(0 0 14px #F2B840AA);
    animation:logoFade 2.2s ease forwards;
}
@keyframes logoFade{
    0%{opacity:0; transform:scale(0.7);}
    60%{opacity:1; transform:scale(1.05);}
    100%{opacity:1; transform:scale(1);}
}
@keyframes fadeOut{
    to{opacity:0; visibility:hidden;}
}

/* MAIN */
#main{
    display:none;
    padding:20px;
}

/* HEADER */
h1{
    text-align:center;
    color:#F2B840;
    text-shadow:0 0 10px #F2B84055;
}

/* SUBTITLE */
.subtitle{
    text-align:center;
    opacity:.8;
    margin-top:-10px;
}

/* SERVICE CARDS */
.cards{
    margin-top:30px;
    display:flex;
    flex-direction:column;
    gap:20px;
}

.card{
    background:rgba(255,255,255,0.06);
    border:1px solid rgba(242,184,64,0.3);
    border-radius:18px;
    padding:20px;
    display:flex;
    align-items:center;
    gap:15px;
    cursor:pointer;
    backdrop-filter:blur(14px);
    transition:.3s;
    box-shadow:0 0 18px rgba(0,0,0,0.3);
}
.card:hover{
    transform:translateY(-4px);
    box-shadow:0 0 25px rgba(242,184,64,0.35);
    border-color:#F2B840;
}

.card img{
    width:55px;
}

.card-title{
    font-size:18px;
    font-weight:bold;
    color:#F2B840;
}

.card-desc{
    opacity:.75;
    font-size:14px;
}

/* LANG BUTTON */
.lang-btn{
    position:fixed;
    bottom:20px;
    right:20px;
    background:#F2B840;
    color:#06142E;
    padding:12px 16px;
    border:none;
    border-radius:50px;
    font-weight:bold;
    cursor:pointer;
    z-index:999;
}
</style>
</head>

<body>

<!-- SPLASH -->
<div id="splash">
    <img src="logotransparent.png">
</div>

<!-- MAIN CONTENT -->
<div id="main">

    <h1 data-fr="CizaRide+" data-en="CizaRide+">CizaRide+</h1>
    <p class="subtitle" data-fr="Choisissez votre niveau de service" data-en="Choose your service level">
        Choisissez votre niveau de service
    </p>

    <div class="cards">

        <!-- STANDARD -->
        <div class="card" onclick="location.href='cizaride-standard.html'">
            <img src="https://img.icons8.com/fluency/96/car.png">
            <div>
                <div class="card-title" data-fr="Standard" data-en="Standard">Standard</div>
                <div class="card-desc" data-fr="Transport rapide et fiable" data-en="Fast and reliable transport">
                    Transport rapide et fiable
                </div>
            </div>
        </div>

        <!-- VIP -->
        <div class="card" onclick="location.href='cizaride-vip.html'">
            <img src="https://img.icons8.com/fluency/96/crown.png">
            <div>
                <div class="card-title" data-fr="VIP" data-en="VIP">VIP</div>
                <div class="card-desc" data-fr="Confort premium & services exclusifs" data-en="Premium comfort & exclusive services">
                    Confort premium & services exclusifs
                </div>
            </div>
        </div>

        <!-- VIP ROYAL -->
        <div class="card" onclick="location.href='cizaride-vip-royal.html'">
            <img src="https://img.icons8.com/fluency/96/diamond.png">
            <div>
                <div class="card-title" data-fr="VIP Royal" data-en="VIP Royal">VIP Royal</div>
                <div class="card-desc" data-fr="Niveau ultime : PDG, diplomates, personnalités" data-en="Ultimate level: CEOs, diplomats, public figures">
                    Niveau ultime : PDG, diplomates, personnalités
                </div>
            </div>
        </div>

    </div>
</div>

<!-- LANG BUTTON -->
<button class="lang-btn" onclick="switchLang()">FR</button>

<script>
// SHOW MAIN AFTER SPLASH
setTimeout(()=>{
    document.getElementById("splash").style.display="none";
    document.getElementById("main").style.display="block";
}, 3000);

// LANGUAGE SWITCH
function switchLang(){
    const html=document.documentElement;
    html.lang = (html.lang==="fr") ? "en" : "fr";
    document.querySelector(".lang-btn").innerHTML = (html.lang==="fr") ? "FR" : "EN";

    document.querySelectorAll("[data-fr]").forEach(el=>{
        el.innerHTML =
            (html.lang==="fr")
            ? el.getAttribute("data-fr")
            : el.getAttribute("data-en");
    });
}
</script>

</body>
</html>
