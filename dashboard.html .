<script>
function logout(){
  localStorage.removeItem("cizaLogged");
  location.href="login.html";
}

const ordersBox = document.getElementById("orders");
const orders = JSON.parse(localStorage.getItem("cizaOrders") || "[]");

if(orders.length===0){
  ordersBox.innerHTML="<p>Aucune commande pour le moment.</p>";
}else{
  orders.reverse().forEach(o=>{
    ordersBox.innerHTML += `
      <div class="card">
        <strong>${o.service}</strong><br>
        NumÃ©ro de suivi : ${o.tracking}<br>
        Date : ${o.date}<br>
        Statut : <span class="status">${o.status}</span><br><br>
        <button onclick="location.href='track-delivery.html?code=${o.tracking}'">
          Suivre ma commande
        </button>
      </div>
    `;
  });
}
</script>

