<script>
/* üî∂ OUVRIR / FERMER POPUP */
function openPopup(){
    document.getElementById("popup").style.display = "flex";
}
function closePopup(){
    document.getElementById("popup").style.display = "none";
}

/* üî∂ AFFICHAGE DES D√âTAILS */
function toggleDetails(id){
    let el = document.getElementById(id);
    el.style.display = (el.style.display === "block") ? "none" : "block";
}

/* üî∂ SWITCH LANG FR/EN */
function switchLang(){

    let html = document.documentElement;
    let current = html.lang;
    let newLang = (current === "fr") ? "en" : "fr";
    html.lang = newLang;

    /* Textes qui ont data-fr et data-en */
    document.querySelectorAll("[data-fr]").forEach(el=>{
        el.innerHTML = (newLang === "fr")
            ? el.getAttribute("data-fr")
            : el.getAttribute("data-en");
    });

    /* Placeholders */
    document.querySelectorAll("input, textarea, select").forEach(el=>{
        if(el.getAttribute("data-fr")){
            el.placeholder = (newLang === "fr")
                ? el.getAttribute("data-fr")
                : el.getAttribute("data-en");
        }
    });
}
</script>

