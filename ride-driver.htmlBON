<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>CizaRide+ — Chauffeur</title>

<!-- Leaflet MAP CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>

<style>
    body {
        margin: 0;
        background: #06142E;
        color: white;
        font-family: system-ui, sans-serif;
    }

    header {
        background: #06142E;
        padding: 18px;
        text-align: center;
        font-size: 22px;
        font-weight: 700;
        border-bottom: 3px solid #F2B840;
    }

    #map {
        width: 100%;
        height: calc(100vh - 120px);
    }

    /* Popup login */
    #loginPopup {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        display: none;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(4px);
        background: rgba(0,0,0,0.7);
    }

    #loginPopup .box {
        background: #112033;
        padding: 25px;
        width: 85%;
        max-width: 330px;
        border-radius: 14px;
        text-align: center;
    }

    #loginPopup input {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        background: #0F1A2A;
        border: none;
        border-radius: 8px;
        color: white;
    }

    #loginPopup button {
        width: 100%;
        padding: 12px;
        background: #F2B840;
        color: #06142E;
        border: none;
        margin-top: 14px;
        border-radius: 8px;
        font-weight: 700;
        cursor: pointer;
    }

    /* Loader */
    #loader {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0.85);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 99999;
    }
    #loader img {
        width: 130px;
        filter: drop-shadow(0 0 8px #F2B840);
        opacity: 0.9;
    }
</style>
</head>

<body>

<div id="loader">
    <img src="logotransparent.png" />
</div>

<header>CizaRide+ — Interface Chauffeur</header>

<div id="map"></div>

<div id="loginPopup">
    <div class="box">
        <h2>Connexion Chauffeur</h2>
        <input id="email" type="email" placeholder="Email">
        <input id="password" type="password" placeholder="Mot de passe">
        <button onclick="loginDriver()">Se connecter</button>
    </div>
</div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- FIREBASE AUTH + FIRESTORE -->
<script type="module">
import { auth } from "./firebase-config.js";

import {
    signInWithEmailAndPassword,
    onAuthStateChanged,
    signOut
} from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";

import {
    getFirestore,
    doc,
    getDoc
} from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";

const db = getFirestore();

const loginPopup = document.getElementById("loginPopup");
const loader = document.getElementById("loader");

let map = null;

/* Vérification connexion */
onAuthStateChanged(auth, async user => {

    loader.style.display = "none";

    if (!user) {
        loginPopup.style.display = "flex";
        return;
    }

    // Vérification Firestore chauffeur
    const ref = doc(db, "drivers", user.uid);
    const snap = await getDoc(ref);

    if (!snap.exists() || snap.data().role !== "driver") {
        alert("Accès refusé : vous n'êtes pas chauffeur CizaRide+.");
        await signOut(auth);
        loginPopup.style.display = "flex";
        return;
    }

    loginPopup.style.display = "none";
    initMap();
});

/* Connexion chauffeur */
window.loginDriver = async function () {
    const mail = document.getElementById("email").value;
    const pass = document.getElementById("password").value;

    try {
        await signInWithEmailAndPassword(auth, mail, pass);
    } catch (e) {
        alert("Erreur : " + e.message);
    }
};

/* Initialisation MAP */
function initMap() {
    map = L.map('map').setView([-3.3822, 29.3644], 13);

    L.tileLayer("https://{s}.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png", {
        attribution: "CizaRide+ Map"
    }).addTo(map);

    L.marker([-3.3822, 29.3644], {
        icon: L.icon({
            iconUrl: "https://cdn-icons-png.flaticon.com/512/684/684908.png",
            iconSize: [40, 40]
        })
    }).addTo(map);
}
</script>

</body>
</html>
