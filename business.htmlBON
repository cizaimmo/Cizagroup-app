<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title>CIZA BUSINESS+ — 2030 Edition</title>
<link rel="icon" href="logotransparent.png">

<style>
/* GLOBAL */
body{
    margin:0;
    background:#06142E;
    font-family:Arial, sans-serif;
    color:white;
    overflow-x:hidden;
}

/* LANG SWITCH */
#lang-switch{
    position:fixed;
    top:15px;
    right:15px;
    background:#F2B840;
    color:#06142E;
    font-weight:bold;
    padding:10px 16px;
    border-radius:14px;
    cursor:pointer;
    z-index:20000;
}

/* ============ HERO 2030 ANIMÉ ============ */
.hero{
    position:relative;
    padding:120px 20px;
    text-align:center;
    overflow:hidden;
}

/* Gradient animé */
@keyframes gradientMove {
    0% {background-position:0% 50%;}
    50% {background-position:100% 50%;}
    100% {background-position:0% 50%;}
}

.hero::before{
    content:"";
    position:absolute;
    top:0;left:0;width:100%;height:100%;
    background:linear-gradient(135deg,#051026,#0B1C34,#071A33,#0a2240);
    background-size:300% 300%;
    animation:gradientMove 12s ease infinite;
    z-index:-3;
}

/* Particules dorées subtiles */
.hero canvas{
    position:absolute;
    top:0;left:0;
    width:100%;
    height:100%;
    z-index:-1;
    pointer-events:none;
}

/* Carte HERO */
.hero-card{
    background:rgba(255,255,255,0.08);
    border:1px solid rgba(255,255,255,0.15);
    backdrop-filter:blur(12px);
    padding:60px 25px;
    max-width:850px;
    margin:auto;
    border-radius:28px;
    box-shadow:0 0 45px rgba(0,0,0,0.45);
    animation:fadeUp 1.4s ease forwards;
    opacity:0;
}

@keyframes fadeUp {
    from {transform:translateY(25px);opacity:0;}
    to {transform:translateY(0);opacity:1;}
}

/* LOGO FLOTTANT + halo */
.hero-logo{
    width:180px;
    height:180px;
    margin:auto;
    background:url('logotransparent.png') center/contain no-repeat;
    animation:floatLogo 5s infinite ease-in-out;
    filter:drop-shadow(0 0 12px #F2B84090);
}

@keyframes floatLogo{
    0%{transform:translateY(0);}
    50%{transform:translateY(-12px);}
    100%{transform:translateY(0);}
}

/* TITRES */
.hero-title{
    font-size:34px;
    margin-top:18px;
    font-weight:bold;
    color:#F2B840;
}
.hero-sub{
    font-size:18px;
    margin-top:10px;
    max-width:680px;
    margin:auto;
    opacity:0.9;
}

/* Boutons HERO */
.hero-btn{
    margin-top:25px;
    background:#F2B840;
    color:#06142E;
    padding:14px 26px;
    border:none;
    border-radius:14px;
    font-size:16px;
    cursor:pointer;
    font-weight:bold;
    box-shadow:0 0 15px #F2B84070;
}
.hero-btn:hover{
    background:#cfa035;
}

/* SECTIONS */
.section{
    padding:50px 20px;
    max-width:900px;
    margin:auto;
}
.section-title{
    font-size:26px;
    color:#F2B840;
    margin-bottom:22px;
}

/* PROGRAM CARDS */
.program-card{
    background:rgba(255,255,255,0.07);
    border:1px solid rgba(255,255,255,0.14);
    backdrop-filter:blur(7px);
    padding:25px;
    border-radius:20px;
    margin-bottom:20px;
    transition:0.3s;
}
.program-card:hover{
    transform:translateY(-6px);
    border-color:#F2B840;
}
.program-card h3{
    color:#F2B840;
    margin:0;
}
.program-btn{
    margin-top:15px;
    width:100%;
    background:#F2B840;
    border:none;
    padding:12px;
    border-radius:12px;
    font-weight:bold;
    color:#06142E;
    cursor:pointer;
}
.program-btn:hover{background:#cfa035}

/* FORMULAIRE */
.form-box{
    margin-top:40px;
    background:rgba(255,255,255,0.07);
    border:1px solid rgba(255,255,255,0.13);
    padding:30px;
    border-radius:18px;
}
input, textarea{
    width:100%;
    margin-top:12px;
    background:#0B1C34;
    border:none;
    padding:12px;
    border-radius:10px;
    color:white;
}
textarea{height:130px;resize:none;}
.submit-btn{
    margin-top:14px;
    background:#F2B840;
    color:#06142E;
    border:none;
    width:100%;
    padding:14px;
    border-radius:12px;
    font-weight:bold;
}
</style>
</head>

<body>

<div id="lang-switch">FR</div>

<!-- ============ HERO ============ -->
<section class="hero">
    <canvas id="particles"></canvas>

    <div class="hero-card">
        <div class="hero-logo"></div>
        <h1 class="hero-title" id="hero-title"></h1>
        <p class="hero-sub" id="hero-sub"></p>

        <button class="hero-btn" id="discover-btn"></button>
        <button class="hero-btn" id="contact-btn"></button>
    </div>
</section>

<!-- ============ PROGRAMMES ============ -->
<section class="section" id="programs">
    <h2 class="section-title" id="program-section-title"></h2>

    <!-- Immobilier -->
    <div class="program-card">
        <h3 id="p1-title"></h3>
        <p id="p1-text"></p>
        <button onclick="location.href='business-immobilier.html'" class="program-btn" id="p1-btn"></button>
    </div>

    <!-- Création d’entreprise -->
    <div class="program-card">
        <h3 id="p2-title"></h3>
        <p id="p2-text"></p>
        <button onclick="location.href='business-creation.html'" class="program-btn" id="p2-btn"></button>
    </div>

    <!-- Investissements -->
    <div class="program-card">
        <h3 id="p3-title"></h3>
        <p id="p3-text"></p>
        <button onclick="location.href='business-investissements.html'" class="program-btn" id="p3-btn"></button>
    </div>

    <!-- Logistique -->
    <div class="program-card">
        <h3 id="p4-title"></h3>
        <p id="p4-text"></p>
        <button onclick="location.href='business-logistique.html'" class="program-btn" id="p4-btn"></button>
    </div>
</section>

<!-- ============ FORMULAIRE ============ -->
<section class="section" id="form">
    <h2 class="section-title" id="form-title"></h2>

    <div class="form-box">
        <form action="https://formsubmit.co/business@cizagroup.com" method="POST">
            <input type="hidden" name="_cc" value="infos@cizagroup.com">
            <input type="hidden" name="_captcha" value="false">

            <input type="hidden" name="_autoresponse"
value="Bonjour,  
Votre demande Business+ a bien été reçue.  
Notre équipe vous contactera sous peu.  
Merci de ne pas répondre à cet email.  
— CIZA GROUP Business+">

            <input id="f-name" type="text" name="nom" required>
            <input id="f-email" type="email" name="email" required>
            <input id="f-phone" type="text" name="telephone">

            <textarea id="f-msg" name="message" required></textarea>

            <label style="font-size:13px;opacity:.8;">
                <input type="checkbox" required>
                <span id="consent-text"></span>
            </label>

            <button class="submit-btn" id="submit-btn"></button>
        </form>
    </div>
</section>

<!-- ============ TRADUCTION JS ============ -->
<script>
let lang="fr";

const T={
    hero_title:{fr:"CIZA Business+ — Services Premium",en:"CIZA Business+ — Premium Services"},
    hero_sub:{fr:"Solutions professionnelles pour diaspora, entreprises et investisseurs.",
              en:"Professional solutions for diaspora, companies and investors."},
    discover:{fr:"Découvrir les programmes",en:"Discover Programs"},
    talk:{fr:"Parler à un conseiller",en:"Talk to an Advisor"},
    programs:{fr:"Programmes Business+",en:"Business+ Programs"},

    p1_title:{fr:"Immobilier Premium",en:"Premium Real Estate"},
    p1_text:{fr:"Projets immobiliers, constructions, gestion et investissements diaspora.",
             en:"Real estate projects, construction, management and diaspora investment."},
    p1_btn:{fr:"Explorer",en:"Explore"},

    p2_title:{fr:"Création d’Entreprise",en:"Business Formation"},
    p2_text:{fr:"RCCM, licences, fiscalité, juridique et accompagnement complet.",
             en:"Registration, licensing, taxation, legal and full support."},
    p2_btn:{fr:"Explorer",en:"Explore"},

    p3_title:{fr:"Investissements & Partenariats",
              en:"Investments & Partnerships"},
    p3_text:{fr:"Opportunités structurées pour diaspora, entreprises et investisseurs.",
             en:"Structured opportunities for diaspora, companies and investors."},
    p3_btn:{fr:"Explorer",en:"Explore"},

    p4_title:{fr:"Logistique Internationale",en:"International Logistics"},
    p4_text:{fr:"Import, export, transport, stockage et solutions entreprises.",
             en:"Import, export, transport, storage and business logistics."},
    p4_btn:{fr:"Explorer",en:"Explore"},

    form_title:{fr:"Contact Business+",en:"Business+ Contact"},
    name:{fr:"Nom complet",en:"Full Name"},
    email:{fr:"Email",en:"Email"},
    phone:{fr:"Téléphone (optionnel)",en:"Phone (optional)"},
    msg:{fr:"Votre message",en:"Your message"},
    consent:{fr:"J’accepte la politique de confidentialité.",
            en:"I accept the privacy policy."},
    send:{fr:"Envoyer",en:"Send"}
};

function translate(){
    document.getElementById("hero-title").textContent=T.hero_title[lang];
    document.getElementById("hero-sub").textContent=T.hero_sub[lang];
    document.getElementById("discover-btn").textContent=T.discover[lang];
    document.getElementById("contact-btn").textContent=T.talk[lang];
    document.getElementById("program-section-title").textContent=T.programs[lang];

    document.getElementById("p1-title").textContent=T.p1_title[lang];
    document.getElementById("p1-text").textContent=T.p1_text[lang];
    document.getElementById("p1-btn").textContent=T.p1_btn[lang];

    document.getElementById("p2-title").textContent=T.p2_title[lang];
    document.getElementById("p2-text").textContent=T.p2_text[lang];
    document.getElementById("p2-btn").textContent=T.p2_btn[lang];

    document.getElementById("p3-title").textContent=T.p3_title[lang];
    document.getElementById("p3-text").textContent=T.p3_text[lang];
    document.getElementById("p3-btn").textContent=T.p3_btn[lang];

    document.getElementById("p4-title").textContent=T.p4_title[lang];
    document.getElementById("p4-text").textContent=T.p4_text[lang];
    document.getElementById("p4-btn").textContent=T.p4_btn[lang];

    document.getElementById("form-title").textContent=T.form_title[lang];
    document.getElementById("f-name").placeholder=T.name[lang];
    document.getElementById("f-email").placeholder=T.email[lang];
    document.getElementById("f-phone").placeholder=T.phone[lang];
    document.getElementById("f-msg").placeholder=T.msg[lang];
    document.getElementById("consent-text").textContent=T.consent[lang];
    document.getElementById("submit-btn").textContent=T.send[lang];
}

document.getElementById("lang-switch").onclick=()=>{
    lang=(lang==="fr")?"en":"fr";
    document.getElementById("lang-switch").textContent=(lang==="fr")?"FR":"EN";
    translate();
};

translate();

document.getElementById("discover-btn").onclick=()=>{
    document.getElementById("programs").scrollIntoView({behavior:"smooth"});
};
document.getElementById("contact-btn").onclick=()=>{
    document.getElementById("form").scrollIntoView({behavior:"smooth"});
};

/* ============ PARTICULES OR SUBTILES ============ */
const canvas=document.getElementById("particles");
const ctx=canvas.getContext("2d");
let w,h;
function resize(){
    w=canvas.width=window.innerWidth;
    h=canvas.height=document.querySelector('.hero').offsetHeight;
}
resize();
window.onresize=resize;

let particles=[];
for(let i=0;i<70;i++){
    particles.push({
        x:Math.random()*w,
        y:Math.random()*h,
        r:Math.random()*2+0.6,
        d:Math.random()*0.6+0.2
    });
}

function draw(){
    ctx.clearRect(0,0,w,h);
    ctx.fillStyle="#F2B840";
    particles.forEach(p=>{
        ctx.globalAlpha=0.25;
        ctx.beginPath();
        ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
        ctx.fill();
    });
}
function update(){
    particles.forEach(p=>{
        p.y+=p.d;
        if(p.y>h){p.y=0;p.x=Math.random()*w;}
    });
}
function animate(){
    draw();update();
    requestAnimationFrame(animate);
}
animate();
</script>

</body>
</html>
