<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>CizaRide+ â€” Portail</title>

<style>
body{
  margin:0;
  min-height:100vh;
  background:linear-gradient(135deg,#06142E,#0A3D91);
  font-family:system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  color:#fff;
}
header{
  padding:18px;
  text-align:center;
  font-size:20px;
  font-weight:600;
  background:rgba(0,0,0,.25);
}
.container{
  padding:20px;
  max-width:900px;
  margin:auto;
}
.card{
  background:rgba(255,255,255,.08);
  backdrop-filter:blur(14px);
  border-radius:18px;
  padding:24px;
  margin-top:20px;
  box-shadow:0 15px 40px rgba(0,0,0,.35);
}
button{
  padding:14px 20px;
  border:none;
  border-radius:14px;
  background:#00A6FF;
  color:#fff;
  font-size:16px;
  font-weight:600;
  cursor:pointer;
  margin-top:14px;
}
.logout{
  background:#444;
  margin-top:30px;
}
.hidden{
  display:none;
}
</style>
</head>

<body>

<header>
  CizaRide+ â€” Portail
</header>

<div class="container">

  <!-- CLIENT -->
  <div id="clientZone" class="card hidden">
    <h2>ğŸ‘¤ Espace Client</h2>
    <p>Commander une course et suivre votre chauffeur.</p>
    <button onclick="openMap()">ğŸ—ºï¸ Ouvrir CizaRide Map</button>
  </div>

  <!-- DRIVER -->
  <div id="driverZone" class="card hidden">
    <h2>ğŸš— Espace Chauffeur</h2>
    <p>GÃ©rez votre disponibilitÃ© et recevez des courses.</p>
    <button>ğŸŸ¢ Passer en ligne</button>
  </div>

  <button class="logout" onclick="logout()">Se dÃ©connecter</button>

</div>

<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";
import { getFirestore, doc, getDoc } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";

/* ğŸ”¥ CONFIG FIREBASE â€” UTILISE LES MÃŠMES CLÃ‰S QUE login.html */
const firebaseConfig = {
  apiKey: "REMPLACE_API_KEY",
  authDomain: "cizagroup-app.firebaseapp.com",
  projectId: "cizagroup-app",
  storageBucket: "cizagroup-app.appspot.com",
  messagingSenderId: "REMPLACE_SENDER_ID",
  appId: "REMPLACE_APP_ID"
};

const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);

/* ğŸ” PROTECTION PORTAIL */
onAuthStateChanged(auth, async (user)=>{
  if(!user){
    window.location.href = "login.html";
    return;
  }

  const ref = doc(db, "users", user.uid);
  const snap = await getDoc(ref);

  if(!snap.exists()){
    window.location.href = "login.html";
    return;
  }

  const role = snap.data().role;

  if(role === "client"){
    document.getElementById("clientZone").classList.remove("hidden");
  }else{
    document.getElementById("driverZone").classList.remove("hidden");
  }
});

/* ACTIONS */
window.openMap = () => {
  window.location.href = "cizaride-map.html";
};

window.logout = async () => {
  await signOut(auth);
  window.location.href = "login.html";
};
</script>

</body>
</html>
